# =============================================================================
# Artenic AI Platform â€” Environment Variables
# =============================================================================
# Copy to .env and adjust values for your environment.
# All platform variables use the ARTENIC_ prefix.
# Nested settings use __ as delimiter (e.g. ARTENIC_GCP__PROJECT_ID).
# =============================================================================

# --- Server ---
ARTENIC_HOST=0.0.0.0
ARTENIC_PORT=9000
ARTENIC_DEBUG=true
ARTENIC_API_KEY=                          # Empty = auth disabled (dev mode)

# --- Database (PostgreSQL) ---
ARTENIC_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/artenic_ai

# --- MLflow ---
ARTENIC_MLFLOW_TRACKING_URI=http://localhost:5000
ARTENIC_MLFLOW_ARTIFACT_ROOT=./mlflow-artifacts
ARTENIC_MLFLOW_EXPERIMENT_PREFIX=artenic

# --- CORS ---
ARTENIC_CORS_ORIGINS=["http://localhost:5173"]

# --- OpenTelemetry ---
ARTENIC_OTEL_ENABLED=false
ARTENIC_OTEL_SERVICE_NAME=artenic-ai-platform

# --- Docker Compose ports (for docker-compose.dev.yml) ---
DB_PORT=5432
MLFLOW_PORT=5000
